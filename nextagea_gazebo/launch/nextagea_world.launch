<launch>
  <arg name="paused" default="false"/>
  <arg name="use_sim_time" default="true"/>
  <arg name="gui" default="true"/>
  <arg name="gzpose" default="-x 0.01 -y 0.01 -z 1.0" />
  <arg name="headless" default="false"/>
  <arg name="debug" default="false"/>
  <arg name="physics" default="ode"/>
  <arg name="verbose" default="false"/>
  <arg name="sec_idle" default="1.0" />
  <arg name="visualize_laser" default="false" />
  <arg name="control_enable" default="true"/>
  <!--  <arg name="world_file" default="$(find turtlebot_gazebo)/worlds/playground.world" /> -->
  <arg name="world_file" default="worlds/empty.world" />

  <!-- need to remap -->
  <!-- <include file="$(find gazebo_ros)/launch/empty_world.launch"> -->
  <!--   <arg name="debug" value="$(arg debug)" /> -->
  <!--   <arg name="gui" value="$(arg gui)" /> -->
  <!--   <arg name="paused" value="$(arg paused)"/> -->
  <!--   <arg name="use_sim_time" value="$(arg use_sim_time)"/> -->
  <!--   <arg name="headless" value="$(arg headless)"/> -->
  <!--   <arg name="world_name" value="$(arg world_file)"/> -->
  <!-- </include> -->
  <arg name="extra_gazebo_args" default=""/>
  <arg name="world_name" value="$(arg world_file)"/>
  <!-- set use_sim_time flag -->
  <param name="/use_sim_time" value="true" />

  <!-- set command arguments -->
  <arg unless="$(arg paused)" name="command_arg1" value=""/>
  <arg     if="$(arg paused)" name="command_arg1" value="-u"/>
  <arg unless="$(arg headless)" name="command_arg2" value=""/>
  <arg     if="$(arg headless)" name="command_arg2" value="-r"/>
  <arg unless="$(arg verbose)" name="command_arg3" value=""/>
  <arg     if="$(arg verbose)" name="command_arg3" value="--verbose"/>
  <arg unless="$(arg debug)" name="script_type" value="gzserver"/>
  <arg     if="$(arg debug)" name="script_type" value="debug"/>

  <!-- start gazebo server-->
  <node ns="nextagea" name="gazebo" pkg="gazebo_ros" type="$(arg script_type)" respawn="false" output="screen"
  args="$(arg command_arg1) $(arg command_arg2) $(arg command_arg3) -e $(arg physics) $(arg extra_gazebo_args) $(arg world_name)" required="true">
  </node>
  <!-- start gazebo client -->
  <group if="$(arg gui)">
    <node ns="nextagea" name="gazebo_gui" pkg="gazebo_ros" type="gzclient" respawn="false" output="screen" required="true"/>
  </group>

  <!-- Load universal robotic description format (URDF) -->
  <arg name="model" default="$(find nextagea_description)/urdf/NextageAOpen_gazebo.urdf.xacro" />
  <param name="robot_description" command="xacro --inorder '$(arg model)'" />
  <node ns="nextagea" pkg="gazebo_ros" type="spawn_model" name="urdf_spawner" respawn="false" output="screen"
        args="$(arg gzpose) -J LARM_JOINT2 -2.0 -J RARM_JOINT2 -2.0 -urdf -model NextageAOpen -param /robot_description -gazebo_namespace /nextagea/gazebo" />

<group if="$(arg control_enable)">
  <include file="$(find nextagea_gazebo)/launch/nextagea_gazebo_control.launch" />        
  
  <!-- convert joint states to TF transforms -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"
  respawn="false" output="screen">
    <remap from="/joint_states" to="/nextagea/joint_states" />
  </node>
</group>

</launch>
